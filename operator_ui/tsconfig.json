{
    "extends": "../tsconfig.es6.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/*",
                "support/*",
                "@types/*"
            ]
        },
        "outDir": "./dist",
        "noEmit": false,
        "incremental": false,
        "composite": false,
        "allowJs": true
    },
    "include": [
        "src",
        "@types",
        "__tests__",
        "support"
    ],
    "references": [
        {
            "path": "../styleguide"
        },
        {
            "path": "../tools/json-api-client"
        },
        {
            "path": "../tools/local-storage"
        },
        {
            "path": "../tools/redux"
        },
        {
            "path": "../tools/ts-helpers"
        }
    ]
}